<?php

class Model__Shoes {

	private $shoes = null;
	private $list = array(
		null,
		array( 'title' => 'shoes1 title', 'text'  => 'shoes1 text', 'message' => array( 'fb'=>"", 'mx'=>"", 'tw'=>"") ),
		array( 'title' => 'shoes2 title', 'text'  => 'shoes2 text', 'message' => array( 'fb'=>"", 'mx'=>"", 'tw'=>"") ),
		array( 'title' => 'shoes3 title', 'text'  => 'shoes3 text', 'message' => array( 'fb'=>"", 'mx'=>"", 'tw'=>"") ),
		array( 'title' => 'shoes4 title', 'text'  => 'shoes4 text', 'message' => array( 'fb'=>"", 'mx'=>"", 'tw'=>"") ),
		array( 'title' => 'shoes5 title', 'text'  => 'shoes5 text', 'message' => array( 'fb'=>"", 'mx'=>"", 'tw'=>"") ),
		array( 'title' => 'shoes6 title', 'text'  => 'shoes6 text', 'message' => array( 'fb'=>"", 'mx'=>"", 'tw'=>"") ),
		array( 'title' => 'shoes7 title', 'text'  => 'shoes7 text', 'message' => array( 'fb'=>"", 'mx'=>"", 'tw'=>"") ),
		array( 'title' => 'shoes8 title', 'text'  => 'shoes8 text', 'message' => array( 'fb'=>"", 'mx'=>"", 'tw'=>"") ),
		array( 'title' => 'shoes9 title', 'text'  => 'shoes9 text', 'message' => array( 'fb'=>"", 'mx'=>"", 'tw'=>"") ),
	);

	public function __construct( $shoes ) {
		$this->shoes = intval( $shoes );
	}

	public function isExists() {
		return isset( $this->list[$this->shoes] );
	}

	public function getUrlForFacebookPicture() {
		if ( $this->isExists() ) {
			return Atto::baseUrl( true, false ) . sprintf( 'img/share/facebook/%02d.jpg', $this->getId() );
		}
		return false;
	}

	public function getPathForMixiPicture() {
		if ( $this->isExists() ) {
			return Atto::dir_htdocs() . sprintf( 'img/share/mixi/%02d.jpg', $this->getId() );
		}
		return false;
	}

	public function getText() {
		if ( $this->isExists() ) {
			return $this->list[$this->shoes]['text'];
		}
		return false;
	}

	public function getTitle() {
		if ( $this->isExists() ) {
			return $this->list[$this->shoes]['title'];
		}
		return false;
	}
	
	public function getShareMessage($sns_type){
		if ( $this->isExists() ) {
			return $this->list[$this->shoes]['message'][$sns_type];
		}
		return false;
	}

	public function getId() {
		return $this->shoes;
	}

}